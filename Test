Sub RefreshDataConnection()
    Dim xlApp As Object
    Dim wb As Object

    Set xlApp = CreateObject("Excel.Application")
    Set wb = xlApp.Workbooks.Open("C:\Path\To\Your\File.xlsx", UpdateLinks:=True)

    wb.RefreshAll
    wb.Save
    wb.Close SaveChanges:=True
    xlApp.Quit

    Set wb = Nothing
    Set xlApp = Nothing
End Sub
