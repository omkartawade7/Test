WITH events AS (
    SELECT 
        agent_id,
        'Shift' AS event_type,
        shift_start AS start_time,
        shift_end AS end_time
    FROM 
        shift_schedule

    UNION ALL

    SELECT 
        agent_id,
        code_type AS event_type,
        code_start AS start_time,
        code_end AS end_time
    FROM 
        schedule_code
),
ordered_events AS (
    SELECT 
        agent_id,
        event_type,
        start_time,
        end_time,
        LAG(end_time) OVER (PARTITION BY agent_id ORDER BY start_time) AS prev_end_time
    FROM 
        events
),
work_periods AS (
    -- Initial Work period before the first scheduled event
    SELECT 
        agent_id,
        'Work' AS event_type,
        shift_start AS start_time,
        MIN(start_time) AS end_time
    FROM 
        events
    JOIN shift_schedule USING (agent_id)
    WHERE event_type != 'Shift'
    GROUP BY agent_id, shift_start

    UNION ALL

    -- Work periods between scheduled events
    SELECT 
        agent_id,
        'Work' AS event_type,
        prev_end_time AS start_time,
        start_time AS end_time
    FROM 
        ordered_events
    WHERE prev_end_time IS NOT NULL AND prev_end_time < start_time

    UNION ALL

    -- Final Work period after the last scheduled event until shift end
    SELECT 
        agent_id,
        'Work' AS event_type,
        MAX(end_time) AS start_time,
        shift_end AS end_time
    FROM 
        events
    JOIN shift_schedule USING (agent_id)
    WHERE event_type != 'Shift'
    GROUP BY agent_id, shift_end
)
SELECT * FROM events
UNION ALL
SELECT * FROM work_periods
ORDER BY agent_id, start_time;
